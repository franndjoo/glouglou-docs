---
import "../sass/docs/fonts.scss";
import "../sass/docs/global.scss";
import "../sass/custom/code.scss";
import "../sass/custom/table.scss";
import "../sass/custom/list.scss";

const { title } = Astro.props.content;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div style="display: grid; grid-template-columns: 20% 80%; height: 100vh;">
      <div
        style="overflow: auto;  width: 96%; padding: 2%; border-right: 1px solid var(--border); display: flex; flex-direction: column;"
      >
        <h1 style="font-variant: all-small-caps;">GlouGlou Docs</h1>
        <a class="tiny" style="text-decoration: none;" href="/">Return to home</a>
        <br />
        <h3>Introduction</h3>
        <a href="/docs/get-started">Get Started</a>
        <a href="/docs/installation">Installation</a>
        <a href="/docs/configuration">The configuration file</a>
        <a href="/docs/api-keys">API Keys</a>
        <br />
        <br />
        <h3>API</h3>
        <a href="/docs/api/rest">Rest API</a>
        <a href="/docs/api/rust" class="disabled">Rust API</a>
        <a href="/docs/api/js">Javascript API</a>
      </div>
      <div style="width: 100%; max-height: 100vh; overflow: auto; display: flex; justify-content: center;">
        <div style="width: 100%; max-width: 800px;">
          <div style="height: 10vh"></div>
          <slot />
          <div style="height: 10vh"></div>
        </div>
      </div>
    </div>
  </body>
</html>
